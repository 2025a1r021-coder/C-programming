 #include <stdio.h>

int main() {

    int units;

    float bill_amount = 0.0;

    // Read the number of electricity units consumed

    scanf("%d", &units);

    // Calculate bill amount based on units consumed

    if (units <= 50) {

        bill_amount = units * 0.50;

    } else if (units <= 150) {

        // First 50 units at Rs. 0.50, remaining at Rs. 0.75

        bill_amount = (50 * 0.50) + ((units - 50) * 0.75);

    } else if (units <= 250) {

        // First 50 units at Rs. 0.50, next 100 at Rs. 0.75, remaining at Rs. 1.20

        bill_amount = (50 * 0.50) + (100 * 0.75) + ((units - 150) * 1.20);

    } else {

        // First 50 units at Rs. 0.50, next 100 at Rs. 0.75, next 100 at Rs. 1.20, remaining at Rs. 1.50

        bill_amount = (50 * 0.50) + (100 * 0.75) + (100 * 1.20) + ((units - 250) * 1.50);

    }

    // Add 20% surcharge to the total bill

    float surcharge = bill_amount * 0.20;

    float total_bill = bill_amount + surcharge;

    // Print the total electricity bill as a floating-point number (up to 2 decimal places)

    printf("%.2f\n", total_bill);

    return 0;

}