#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) {
        // Print leading spaces (2 per missing row for perfect centering)
        for (int j = 1; j <= N - i; j++) {
            printf("  ");
        }

        // Print stars with a space between them
        for (int k = 1; k <= (2 * i - 1); k++) {
            printf("* ");
        }

        printf("\n");
    }

    return 0;
}
