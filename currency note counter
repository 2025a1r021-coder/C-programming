 #include <stdio.h>

int main() {

    int N;

    // Variables to store the count of each denomination

    int count500 = 0, count100 = 0, count50 = 0, count20 = 0;

    int count10 = 0, count5 = 0, count2 = 0, count1 = 0;

    // Read the input amount

    scanf("%d", &N);

    // Calculate the number of notes for each denomination using a greedy approach

    if (N >= 500) {

        count500 = N / 500;

        N = N % 500;

    }

    if (N >= 100) {

        count100 = N / 100;

        N = N % 100;

    }

    if (N >= 50) {

        count50 = N / 50;

        N = N % 50;

    }

    if (N >= 20) {

        count20 = N / 20;

        N = N % 20;

    }

    if (N >= 10) {

        count10 = N / 10;

        N = N % 10;

    }

    if (N >= 5) {

        count5 = N / 5;

        N = N % 5;

    }

    if (N >= 2) {

        count2 = N / 2;

        N = N % 2;

    }

    if (N >= 1) {

        count1 = N / 1;

        N = N % 1;

    }

    // Print the count of notes for each denomination if it's greater than 0

    if (count500 > 0) {

        printf("500: %d\n", count500);

    }

    if (count100 > 0) {

        printf("100: %d\n", count100);

    }

    if (count50 > 0) {

        printf("50: %d\n", count50);

    }

    if (count20 > 0) {

        printf("20: %d\n", count20);

    }

    if (count10 > 0) {

        printf("10: %d\n", count10);

    }

    if (count5 > 0) {

        printf("5: %d\n", count5);

    }

    if (count2 > 0) {

        printf("2: %d\n", count2);

    }

    if (count1 > 0) {

        printf("1: %d\n", count1);

    }

    return 0;

}
