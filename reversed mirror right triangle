#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) {
        // Print leading spaces (2 spaces for each missing star)
        for (int j = 1; j <= N - i; j++) {
            printf("  ");
        }

        // Print stars followed by a space
        for (int k = 1; k <= i; k++) {
            printf("* ");
        }

        printf("\n");
    }

    return 0;
}
